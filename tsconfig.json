{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@assets/*": ["assets/*"],
      "@constants/*": ["constants/*"],
      "@components/*": ["components/*"],
      "@context/*": ["context/*"],
      "@containers/*": ["containers/*"],
      "@mockData/*": ["mockData/*"],
      "@layout/*": ["layout/*"],
      "@routes/*": ["routes/*"],
      "@store/*": ["store/*"],
      "@styles/*": ["styles/*"],
      "@theme/*": ["theme/*"],
      "@hooks/*": ["hooks/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": [".eslintrc.json", "src", "./vite.config.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
